<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="garanti_form">
            <input type="hidden" name="data_set" t-att-data-action-url="tx_url" data-remove-me=""/>
        </template>

        <template id="garanti_s2s_form">
            <input type="hidden" name="data_set" data-create-route="/payment/garanti/s2s/create_json_3ds"/>
            <div class="row">
                <div class="col-12 col-lg-8 garanti-form">
                    <input name="acquirer_id" type="hidden" id="acquirer_id"
                           t-att-value="id"/>
                    <input name="partner_id" type="hidden"
                           t-att-value="partner_id"/>
                    <div id="credit-card">
                        <div class="form-group">
                            <label for="username">
                                <h6>Card Owner</h6>
                            </label>
                            <input type="text"
                                   name="cc_holder_name"
                                   placeholder="Card Owner Name"
                                   class="form-control "/>
                        </div>
                        <div class="form-group">
                            <label for="cardNumber">
                                <h6>Card number</h6>
                            </label>
                            <div class="input-group">
                                <input type="text"
                                       maxlength="19"
                                       name="cc_number"
                                       placeholder="XXXX XXXX XXXX XXXX"
                                       inputmode="numeric"
                                       class="form-control "/>
                                <span class="input-group-text text-muted">
                                    <i class="fa fa-credit-card mx-1"></i>
                                </span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-8">
                                <div class="form-group">
                                    <label>
                                        <h6>
                                            Expiration Date
                                        </h6>
                                    </label>
                                    <div class="input-group">
                                        <input type="text" name="cc_expiry" id="cc_expiry" class="form-control"
                                               maxlength="7" placeholder="Expires (MM / YY)" data-is-required="true"/>
